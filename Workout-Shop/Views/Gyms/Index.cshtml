@{
}

@model IEnumerable<Gyms>

@{
    ViewData["Title"] = "Type of Gym";
}



<nav>
    <ul class="navbar-nav">
        @await Component.InvokeAsync("ShoppingCartSummary")
    </ul>
</nav>

<div class="plan-container">

    <div class="box">
        <form asp-controller="Home" asp-action="Index">
            <input type="text" class="input" name="txt" onmouseout="this.value = ''; this.blur();">
            @* <button class="btn-search"><i class="bi bi-search"></i></button> *@
        </form>
        <i class="bi bi-search"></i>
    </div>


    <div class="slider-container">
        <div class="slider-images">
            @foreach (var item in Model)
            {
                <div class="slider-img">
                    <img src="@item.Logo" alt="@item.Name" />
                    <h1>@Html.DisplayFor(modelItem => item.Name)</h1>
                    <div class="details">
                        
                        <p>@Html.DisplayFor(modelItem => item.Description)</p>
                        <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-outline-info" asp-action="Delete" asp-route-id="@item.Id" S>Delete</a>
                    </div>
                </div>
            }
        </div>
        <div style="position : fixed; right: 25px; bottom: 25px" class="text-white">
            <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Add New </a>  @* The as ASP action returns views from the controller*@
        </div>


        @section Scripts {

            <script>
                jQuery(document).ready(function ($) {
                    $(".slider-img").on("click", function () {
                        $(".slider-img").removeClass("active");
                        $(this).addClass("active");
                    });
                });


            </script>
        }
