@{
}

@model IEnumerable<Plan>

@{
    ViewData["Title"] = "List of Plans";
}

<div>
    <h1>
        Workouts
    </h1>
</div>

<div class= "background">
    <h1>
        This is for the background;
    </h1>
</div>

<div class="row">
    @foreach(var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width:540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Name
                                    <a class="text-white float-right"><i class="bg-info bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ImageURL" width="100%" alt="@item.Name"></img>
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><b>Gym</b> @item.Gyms.Name</p> 
                            <p class="card-text"><b>Category</b> @item.WorkoutCategory</p>
                            <p class="card-text"><b>Start Date</b> @item.StartDate.ToString("dd/MMM/yyy")</p>
                            <p class="card-text"><b>End Date</b> @item.EndDate.ToString("dd/MMM/yyy")</p>
                            <p class="card-text"><b>Status</b> @if (DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate)
                                {
                                    <span class="badge bg-success">In Progress</span>
                                }
                                else{
                                    <span class="badge bg-primary">Completed</span>
                                    
                                    }
                                </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-13">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right"><i class="bi bi-eye-fill"></i>Show Details</a>
                            <a class="btn btn-outline-primary float-right"><i class="bi bi-eye-fill"></i>Add to Cart(Price @item.Price.ToString("c"))</a>
                        </p>

                    </div>
                </div>
            </div>
        </div>

    }
</div>